      "name": "monitors",
      "description": "Monitors"
    },
    {
      "name": "checks",
      "description": "Checks"
    },
    {
      "name": "alerts",
      "description": "Alerts"
    },
    {
      "name": "pagespeed",
      "description": "Page Speed"
    },
    {
      "name": "maintenance-window",
